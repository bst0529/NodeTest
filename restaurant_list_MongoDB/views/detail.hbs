<style>
    .restaurant-show-title {
        position: relative;
        top: -100px;
        color: white;
        text-align: center;
        font-size: 3rem;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
</style>
<h1 class="restaurant-show-title">{{ restaurant.name }}</h1>
<div class="container">
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <p>
                <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                </span>
                {{ restaurant.category }}
            </p>
            <p>
                <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                </span>
                {{ restaurant.location }}
                <a href="{{ restaurant.google_map }}" target="_blank" class="ml-2">
                    <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                </a>
            </p>
            <p>
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                </span>
                {{ restaurant.phone }}
            </p>
            <p>
                {{ restaurant.description }}
            </p>
            <img class="rounded d-block mb-4 w-100 mx-auto" src="{{ restaurant.image }}" alt="{{ restaurant.name }}" style="max-width: 600px;">
        </div>
    </div>
    <div class="text-center mt-3 mb-5">
        <a href="/restaurants/edit/{{ restaurant._id }}" class="btn btn-primary">修改</a>
        <a href="/" class="btn btn-info">回首頁</a>
    </div>
    
</div>