<style>
    #restaurant_name {
        position: relative;
        top: -100px;
        color: white;
        text-align: center;
        font-size: 3rem;
        text-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
    }
</style>

<form action="/restaurants/" method="post">

<div class="container">
    <h1 id="restaurant_name"></h1>
    <div class="row">
        <div class="col-md-10 col-12 mx-auto">
            <p>
                <span class="text-secondary">
                    <i class="fas fa-utensils pr-2"></i>
                    類別：
                </span>
                <span id="restaurant_category"></span>
            </p>
            <p>
                <span class="text-secondary">
                    <i class="fas fa-map-marker-alt pr-2"></i>
                    地址：
                </span>
                <span id="restaurant_location"></span>
                <a href="#" target="_blank" class="ml-2" id="restaurant_google_map">
                    <i class="fas fa-location-arrow pr-2 fa-xs"></i>
                </a>
            </p>
            <p>
                <span class="text-secondary">
                    <i class="fas fa-mobile-alt pr-2"></i>
                    電話：
                </span>
                <span id="restaurant_phone"></span>
            </p>
            <p>
                <span id="restaurant_description"></span>
            </p>
            <img class="rounded d-block mb-4 w-100 mx-auto" id="restaurant_image" src="#" alt="" style="max-width: 600px;">
        </div>
    </div>
</div>

<div class="container">
    <div class="input-groups">
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">餐廳中文名稱</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫中文餐廳名稱" name="name"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="name-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">餐廳英文名稱</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫英文餐廳名稱" name="name_en"/>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">餐廳圖片網址</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫餐廳圖片網址" name="image"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="image-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">料理類別</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫料理類別" name="category"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="category-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">地址</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫地址" name="location"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="location-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">google地圖網址</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫google地圖網址" name="google_map"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="google_map-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">電話</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫電話" name="phone"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="phone-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">描述</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫描述" name="description"/>
            <div class="input-group-append">
                <button type="button" class="btn btn-secondary" id="description-apply">應用</button>
            </div>
        </div>
        <div class="input-group mb-2">
            <div class="input-group-prepend">
                <span class="input-group-text">得分</span>
            </div>
            <input type="text" class="form-control" placeholder="請填寫得分" name="rating"/>
        </div>
        <div class="mt-3 mb-3 text-center">
            <button type="submit" class="btn btn-primary">儲存</button>
            <button type="button" class="btn btn-warning" id="re-new-apply">全部重填</button>
            <a href="/" class="btn btn-info">回首頁</a>
        </div>
    </div>
</div>
</form>
<script>
    document.querySelector('.input-groups').addEventListener('click', event => {
        if (event.target.tagName === 'BUTTON' && event.target.id.includes('-apply')) {
            let inputTxt = ''
            switch (event.target.id) {
                case 're-new-apply':
                    document.querySelector('#restaurant_name').innerText = ''
                    document.querySelector('#restaurant_image').alt = ''
                    document.querySelector('#restaurant_image').src = '#'
                    document.querySelector('#restaurant_category').innerText = ''
                    document.querySelector('#restaurant_location').innerText = ''
                    document.querySelector('#restaurant_google_map').href = ''
                    document.querySelector('#restaurant_phone').innerText = ''
                    document.querySelector('#restaurant_description').innerText = ''
                    document.querySelector('input[name="name"]').value = ''
                    document.querySelector('input[name="name_en"]').value = ''
                    document.querySelector('input[name="image"]').value = ''
                    document.querySelector('input[name="category"]').value = ''
                    document.querySelector('input[name="location"]').value = ''
                    document.querySelector('input[name="google_map"]').value = ''
                    document.querySelector('input[name="phone"]').value = ''
                    document.querySelector('input[name="description"]').value = ''
                    document.querySelector('input[name="rating"]').value = ''
                    break;
                case 'name-apply':
                    inputTxt = document.querySelector('input[name="name"]').value
                    document.querySelector('#restaurant_name').innerText = inputTxt
                    document.querySelector('#restaurant_image').alt = inputTxt
                    break;
                case 'image-apply':
                    inputTxt = document.querySelector('input[name="image"]').value
                    document.querySelector('#restaurant_image').src = inputTxt
                    break;
                case 'category-apply':
                    inputTxt = document.querySelector('input[name="category"]').value
                    document.querySelector('#restaurant_category').innerText = inputTxt
                    break;
                case 'location-apply':
                    inputTxt = document.querySelector('input[name="location"]').value
                    document.querySelector('#restaurant_location').innerText = inputTxt
                    break;
                case 'google_map-apply':
                    inputTxt = document.querySelector('input[name="google_map"]').value
                    document.querySelector('#restaurant_google_map').href = inputTxt
                    break;
                case 'phone-apply':
                    inputTxt = document.querySelector('input[name="phone"]').value
                    document.querySelector('#restaurant_phone').innerText = inputTxt
                    break;
                case 'description-apply':
                    inputTxt = document.querySelector('input[name="description"]').value
                    document.querySelector('#restaurant_description').innerText = inputTxt
                    break;
            }
        }
    })
</script>